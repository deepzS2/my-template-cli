{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "plugins": ["prettier", "require-sort"],
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
      "semi": "off",
      "linebreak-style": "off",
      "prettier/prettier": "error",
      "require-sort/require-sort": ["error", { "ignoreCase": true }]
    }
}
