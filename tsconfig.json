{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2015",
    "lib": [
      "es6",
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noEmit": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "baseUrl": "src",
    "paths": {
      "@commands/*": [
        "commands/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@templates/*": [
        "templates/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@/*": [
        "*"
      ]
    }
  },
  "exclude": [
    "**/*.test.ts",
    "node_modules",
    "lib",
    "src/templates",
    "src/__tests__"
  ]
}